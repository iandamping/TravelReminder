<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fitur.input.InputActivity">

    <!--<include layout="@layout/viewpager"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etUsernameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_item_24dp"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="@string/Input_Barang"
                android:inputType="textMultiLine" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etJumlahBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_plus_one_pink_24dp"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Isi Jumlah"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etDestinationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_local_airport_pink_24dp"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="@string/Input_Tujuan"
                android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etDepartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_range_pink_24dp"
                android:drawablePadding="8dp"
                android:focusable="false"
                android:ems="10"
                android:hint="pick a date"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etArrivalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:drawableLeft="@drawable/ic_date_range_pink_24dp"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="pick a date"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_toLeftOf="@id/btnLihat"
                android:text="input" />

            <Button
                android:id="@+id/btnLihat"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:text="lihat" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>